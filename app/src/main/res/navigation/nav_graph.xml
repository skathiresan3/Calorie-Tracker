<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.calorietracker.HomeFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/home_fragment">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_PhotoSelectFragment"
            app:destination="@id/PhotoSelectFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.calorietracker.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/PhotoSelectFragment"
        android:name="com.example.calorietracker.PhotoSelectFragment"
        android:label="PhotoSelectFragment"
        tools:layout="@layout/fragment_photo_select">
        <action
            android:id="@+id/action_photoSelectFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>


    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.calorietracker.ResultFragment"
        android:label="Result"
        tools:layout="@layout/fragment_result" />
</navigation>